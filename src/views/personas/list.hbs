<div class="container mx-auto p-4">
    <div class="row">
        {{#if personas}}
        <div class="col">
            <table class="min-w-full bg-white border border-gray-300 shadow-md rounded-lg text-center">
                <thead>
                    <tr class="bg-blue-600 text-white">
                        <th class="py-3 px-6">Nombre</th>
                        <th class="py-3 px-6">Apellidos</th>
                        <th class="py-3 px-6">Edad</th>
                        <th class="py-3 px-6">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6">{{name}}</td>
                        <td class="py-3 px-6">{{lastname}}</td>
                        <td class="py-3 px-6">{{age}}</td>
                        <td class="py-3 px-6">
                            <button class="bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-600 mr-2"><a href="/edit/{{_id}}">Editar</a></button>
                            <button class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600"><a href="/delete/{{_id}}">Eliminar</a></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="bg-gray-200">
                        <td colspan="4" class="py-3 px-6 font-semibold">Registro de personas</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="flex justify-center items-center h-auto border border-gray-300 w-[500px] py-8 px-8 rounded-lg m-auto shadow-md bg-white">
            <div class="flex flex-col justify-center items-center gap-8">
                <h1 class="text-4xl font-bold text-gray-700">Debes crear una persona</h1>
                <p class="text-gray-600">Presiona este bot√≥n para crear una persona</p>
                <button class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
                    <a href="#">Crear una persona</a>
                </button>
            </div>
        </div>
        {{/if}}
    </div>
</div>
